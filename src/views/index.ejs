<%- include  ('./partials/_header.ejs') %>


    <div class="container">
        <div class="row">
            <!-- form -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="insert a title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" class="form-control" placeholder="insert a description"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary col-12">Add</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- list -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>N.</th>
                            <th>title</th>
                            <th>description</th>
                            <th>operation</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <%- include  ('./partials/_footer.ejs') %>